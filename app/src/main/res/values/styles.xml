<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="HeaderArrowBack">
        <item name="android:id">@id/header_arrow_back</item>
        <item name="android:layout_width">@dimen/login_header_arrow_back</item>
        <item name="android:layout_height">@dimen/login_header_arrow_back</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ic_back_green</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="LoginHeaderArrowBack" parent="HeaderArrowBack">
        <item name="android:src">@drawable/icon_header_back</item>
    </style>

    <style name="LoginPersonalDetailsInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/profile_details_color</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:backgroundTint">@color/edit_text_hint_background</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>

    <style name="PageShadow">
        <item name="android:id">@id/page_shadow</item>
        <item name="android:layout_width">@dimen/page_shadow_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shadow_left</item>
        <item name="android:translationX">@dimen/page_shadow_translation</item>
    </style>

    <style name="SettingsItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:background">@drawable/item_white</item>
    </style>

    <style name="SettingsItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="SettingsItemArrow">
        <item name="android:layout_width">@dimen/settings_item_arrow</item>
        <item name="android:layout_height">@dimen/settings_item_arrow</item>
        <item name="android:src">@drawable/icon_arrow</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="SettingsItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ServiceFeeMinValue">
        <item name="android:layout_width">@dimen/service_fee_min_value_size</item>
        <item name="android:layout_height">@dimen/service_fee_min_value_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/icon_min_service_fee</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
