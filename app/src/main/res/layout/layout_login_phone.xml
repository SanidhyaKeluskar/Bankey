<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light">

    <ImageView
        android:id="@+id/login_signup_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_signup_logo_height"
        android:src="@drawable/logo_signup"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/login_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blue_dark"
        android:text="@string/login_sign_up_welcome"/>

    <LinearLayout
        android:id="@+id/login_signup_code_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">


        <LinearLayout
            android:id="@+id/login_signup_phone_code_container"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/login_signup_code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/blue_light"
                    android:layout_gravity="center_vertical"
                    android:text="@string/country"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_arrow_down"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/login_signup_flag"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/login_signup_phone_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/blue_light"
                    android:textSize="12dp"
                    android:text="+961"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_light"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_signup_phone_number_container"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/blue_light"
                android:text="@string/phone_number"/>

            <EditText
                android:id="@+id/login_signup_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="12"
                android:textColor="@color/blue_light"
                android:textSize="12dp"
                android:background="@null"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_light"/>

        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/login_signup_tac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:text="@string/login_sign_up_terms"/>

    <include layout="@layout/layout_button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"/>

</LinearLayout>