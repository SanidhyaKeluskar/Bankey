<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/account_top_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_top_white"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/account_top_white"
        android:background="@drawable/shadow_bottom"/>

    <View
        android:layout_width="@dimen/account_item_strip_width"
        android:layout_height="@dimen/account_item_height"
        android:background="@color/blue_green"/>

    <TextView
        android:id="@+id/my_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/blue_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/my_account" />

    <ImageView
        android:id="@+id/account_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/icon_settings"/>

    <View
        android:layout_width="@dimen/account_item_strip_width"
        android:layout_height="@dimen/account_item_height"
        android:background="@color/blue_green"
        android:layout_alignParentRight="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_image"
        android:layout_width="@dimen/account_image_size"
        android:layout_height="@dimen/account_image_size"
        android:layout_marginTop="@dimen/account_image_top_margin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        app:civ_border_width="4dp"
        android:src="@drawable/ic_no_photo"
        app:civ_border_color="@color/blue_green"/>

    <TextView
        android:id="@+id/account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/account_top_white"
        android:text="Name Surname"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_toLeftOf="@id/account_image"
        android:layout_marginBottom="8dp"
        android:paddingRight="8dp"
        android:textSize="18dp"/>


</merge>