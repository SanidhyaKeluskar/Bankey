<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center"
        android:background="#80000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:gravity="center"
            android:text="@string/key_rate_title"/>

        <TextView
            android:id="@+id/key_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:text="@string/key_rate_subtitle"/>

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/key_rate_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:srb_starSize="@dimen/key_rate_text_size"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_stepSize="1"
            app:srb_starBackgroundColor="@color/black"
            app:srb_drawBorderEnabled="false"
            app:srb_fillColor="@color/blue_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_rate_later"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/blue_green"
                android:text="@string/rate_later"/>

            <TextView
                android:id="@+id/key_rate_and_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/blue_green"
                android:text="@string/rate_and_review"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>