<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light">

    <View style="@style/PageShadow"/>

    <ImageView
        style="@style/LoginHeaderArrowBack"/>

    <TextView
        android:id="@+id/login_passcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/blue_dark"
        android:text="@string/login_passcode_create"/>

    <com.bankey.bankeyclient.view.PassCodeInput
        android:id="@+id/login_passcode_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_centerInParent="true" />

</RelativeLayout>